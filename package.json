{
  "name": "voiceai-game",
  "version": "1.0.0",
  "description": "Aplicación web de conversación por voz con IA usando Whisper, ChatGPT y ElevenLabs/CoquiTTS",
  "type": "module",
  "main": "backend/server.js",
  "scripts": {
    "dev": "node backend/server.js",
    "start": "node backend/server.js",
    "dev:vite": "vite",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:vite\"",
    "build": "npm install && vite build --outDir frontend/dist"
  },
  "keywords": [
    "voice",
    "ai",
    "chatgpt",
    "whisper",
    "elevenlabs",
    "tts",
    "stt"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ricky0123/vad-web": "^0.0.30",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.0",
    "multer": "^1.4.5-lts.1",
    "onnxruntime-web": "^1.23.2",
    "openai": "^4.20.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "vite": "^7.2.4"
  }
}